{
    "name": "openeuropa/site-rtd",
    "description": "A website built on the OpenEuropa platform.",
    "type": "project",
    "license": "EUPL-1.2",
    "require": {
        "php": "~7.1",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/config_installer": "^1.8",
        "drupal/core": "~8.6@alpha",
        "drush/drush": "^9.0.0",
        "openeuropa/oe_profile": "~0.1",
        "openeuropa/oe_theme": "~0.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/console": "^1.0.2",
        "openeuropa/composer-artifacts": "~0.1",
        "openeuropa/task-runner": "~0.5",
        "webflo/drupal-core-require-dev": "~8.6"
    },
    "scripts": {
        "post-install-cmd": [
            "./vendor/bin/run drupal:site-setup"
        ],
        "post-update-cmd": [
            "./vendor/bin/run drupal:site-setup"
        ]
    },
    "extra": {
        "artifacts": {
            "openeuropa/oe_theme": {
                "dist": {
                    "url": "https://github.com/{name}/releases/download/{pretty-version}/{project-name}-{pretty-version}.tar.gz",
                    "type": "tar"
                }
            }
        },
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\site_a\\": "./src/"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}

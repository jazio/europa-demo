{#
/**
 * @file
 * Site banner block template.
 */
#}

<div class="ecl-banner ecl-banner--hero">
  <img class="ecl-image ecl-image--fluid ecl-banner__image" src="{{ background }}" role="presentation" />
  <div class="ecl-banner__content">
    <h3 class="ecl-heading ecl-heading--h3 ecl-banner__title">

      <a class="ecl-link ecl-link--standalone" href="#">{{ 'Highlight'|t }}</a>
    </h3>
    <p class="ecl-paragraph ecl-banner__description">{{ link }}</p>
  </div>
</div>

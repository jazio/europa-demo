{
    "name": "ec-europa/contentlayerdemo",
    "description": "Europa content layer demo sites, based on OpenEuropa components.",
    "type": "project",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "behat/behat": "^3.5",
        "behat/mink": "1.7.x-dev",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "1.3.x-dev",
        "drupal/drupal-extension": "~3.4",
        "openeuropa/task-runner": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "Ec\\Europa\\ContentLayerDemo\\": "./src/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "./vendor/bin/run content-layer-demo:demoSitesSetup",
            "./vendor/bin/run content-layer-demo:demoSitesInstall"
            ]
    }
}

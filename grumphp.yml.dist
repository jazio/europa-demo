imports:
- { resource: vendor/openeuropa/code-review/dist/drupal-conventions.yml }

parameters:
  tasks.phpcs.ignore_patterns:
  - sites/rtd/vendor
  - sites/rtd/web/.ht.router.php
  - sites/rtd/web/autoload.php
  - sites/rtd/web/index.php
  - sites/rtd/web/update.php
  - sites/rtd/web/core
  - sites/rtd/web/sites
  - sites/rtd/web/modules/contrib/
  - sites/rtd/web/themes/contrib/
  - sites/rtd/web/profiles/contrib/
  - sites/rtd/web/libraries/
  - sites/agri/vendor
  - sites/agri/web/.ht.router.php
  - sites/agri/web/autoload.php
  - sites/agri/web/index.php
  - sites/agri/web/update.php
  - sites/agri/web/core
  - sites/agri/web/sites
  - sites/agri/web/modules/contrib/
  - sites/agri/web/themes/contrib/
  - sites/agri/web/profiles/contrib/
  - sites/agri/web/libraries/
  - sites/energy/vendor
  - sites/energy/web/.ht.router.php
  - sites/energy/web/autoload.php
  - sites/energy/web/index.php
  - sites/energy/web/update.php
  - sites/energy/web/core
  - sites/energy/web/sites
  - sites/energy/web/modules/contrib/
  - sites/energy/web/themes/contrib/
  - sites/energy/web/profiles/contrib/
  - sites/energy/web/libraries/

  tasks.phpcs.triggered_by:
  - php
  - module
  - inc
  - theme
  - install

  extra_tasks:
    phpparser:
      ignore_patterns: "%tasks.phpcs.ignore_patterns%"
      visitors:
        declare_strict_types: ~
      triggered_by: "%tasks.phpcs.triggered_by%"

  extensions:
  - OpenEuropa\CodeReview\ExtraTasksExtension
